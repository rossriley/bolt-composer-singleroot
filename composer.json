{
    "name": "rossriley/boltcomposer-singleroot",
    "require": {
        "bolt/bolt": "dev-master"
    },
    "authors": [
        {
            "name": "Ross Riley",
            "email": "riley.ross@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ]
    },
    
    "extra":{
        "bolt-web-dir": "."
    },
    
    "autoload": {
        "files": ["vendor/bolt/bolt/app/lib.php"]
    },
    
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    }
    
    
}
